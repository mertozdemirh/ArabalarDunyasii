@model Araba
@{
    ViewData["Title"] = "Yeni Araba";
}

<h1>Yeni Araba</h1>

<div asp-validation-summary="All" class="alert alert-danger"></div>

<form action="/" method="post"></form>
<form method="post" asp-controller="Arabalar" asp-action="Yeni">
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" type="text" class="form-control" />
        <span asp-validation-for="Model" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Yil"></label>
        <input asp-for="Yil" type="text" class="form-control" />
        <span asp-validation-for="Yil" class="form-text text-danger"></span>
    </div>
    <button class="btn btn-primary">Ekle</button>
</form>